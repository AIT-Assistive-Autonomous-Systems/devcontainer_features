# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
charset = utf-8
max_line_length = 100

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2
